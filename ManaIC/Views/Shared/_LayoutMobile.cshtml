@{
    var url = new Uri($"{Context.Request.Scheme}://{Context.Request.Host}");
}
<!DOCTYPE html>
<html>
<head>
    <link href="https://fonts.googleapis.com/css?family=Kanit:300&amp;subset=thai" rel="stylesheet">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="@(url)lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="@(url)lib/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css" />
        <link rel="stylesheet" href="@(url)css/site.css" />
    </environment>
</head>
<body>
    @RenderBody()

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/moment/moment.js" asp-append-version="true"></script>
        <script src="~/lib/moment/locale/th.js" asp-append-version="true"></script>
        <script src="~/lib/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="@(url)lib/jquery/dist/jquery.js"></script>
        <script src="@(url)lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="@(url)lib/moment/moment.js" asp-append-version="true"></script>
        <script src="@(url)lib/moment/locale/th.js" asp-append-version="true"></script>
        <script src="@(url)lib/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js"></script>
        <script src="@(url)js/site.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>